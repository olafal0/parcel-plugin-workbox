{
  "parserOptions": {
    "ecmaVersion": 10
  },
  "rules": {
    "arrow-parens": ["warn", "always"],
    "brace-style": ["warn", "1tbs"],
    "camelcase": [
      "warn",
      {
        "properties": "always"
      }
    ],
    "curly": "warn",
    "func-style": ["error", "declaration"],
    "no-var": "error",
    "no-extra-semi": "error",
    "object-curly-spacing": ["warn", "always"],
    "semi": "error",
    "quotes": ["warn", "single"],
    "quote-props": ["warn", "consistent-as-needed"],
    "space-in-parens": "warn",
    "prefer-const": "warn"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
